<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:padding="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nim"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="#EAEAEA"
                android:textSize="18sp"
                android:typeface="normal"/>
            <EditText
                android:id="@+id/txNim_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/outline_rounded"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:textColor="#EAEAEA"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_lengkap"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="#EAEAEA"
                android:textSize="18sp"
                android:typeface="normal"/>
            <EditText
                android:id="@+id/txNama_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:background="@drawable/outline_rounded"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:textColor="#EAEAEA"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prodi"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="#EAEAEA"
                android:textSize="18sp"
                android:typeface="normal"/>
            <Spinner
                android:id="@+id/spProdi_Add"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/prodi"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kelas"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="#EAEAEA"
                android:textSize="18sp"
                android:typeface="normal"/>
            <EditText
                android:id="@+id/txKelas_Add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:background="@drawable/outline_rounded"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:textColor="#EAEAEA"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>